<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         name="Custom Ruleset"
         xmlns="http://pmd.sf.net/ruleset/2.0.0"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/2.0.0
                             https://pmd.github.io/pmd-6.0.0/ruleset_2_0_0.xsd">

  <description>My custom PMD ruleset.</description>

  <rule ref="category/java/bestpractices.xml">
    <exclude name="GuardLogStatement"/>
  </rule>
  <rule ref="category/java/design.xml"/>
  <rule ref="category/java/design.xml/LawOfDemeter">
    <properties>
      <property name="trustRadius" value="2"/>
    </properties>
  </rule>
  <rule ref="category/java/design.xml/UseUtilityClass">
    <properties>
      <property
        name="violationSuppressXPath"
        value=".[pmd-java:hasAnnotation('org.springframework.boot.autoconfigure.SpringBootApplication')]"
      />
    </properties>
  </rule>
  <rule ref="category/java/errorprone.xml">
    <exclude name="MissingSerialVersionUID"/>
  </rule>
  <rule ref="category/java/multithreading.xml"/>
  <rule ref="category/java/performance.xml"/>
  <rule ref="category/java/security.xml"/>
</ruleset>
